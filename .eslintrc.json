{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "prettier"],
  "rules": {
    "prettier/prettier": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": ["type:shell", "type:util"]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": ["type:core", "type:util", "type:shared", "type:data"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:feature", "type:core", "type:ui", "type:data", "type:util"]
              },
              {
                "sourceTag": "type:http",
                "onlyDependOnLibsWithTags": ["type:data", "type:logic", "type:util"]
              },
              {
                "sourceTag": "type:logic",
                "onlyDependOnLibsWithTags": ["type:data", "type:logic", "type:util"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util", "type:config"]
              },
              {
                "sourceTag": "type:shell",
                "onlyDependOnLibsWithTags": ["type:shell", "type:data", "type:core", "type:feature", "type:util", "type:ui", "type:http", "type:config"]
              },
              {
                "sourceTag": "type:config",
                "onlyDependOnLibsWithTags": ["type:config", "type:data", "type:util"]
              },
              {
                "sourceTag": "scope:api",
                "onlyDependOnLibsWithTags": ["scope:api", "scope:shared"]
              },
              {
                "sourceTag": "scope:web",
                "onlyDependOnLibsWithTags": ["scope:web", "scope:shared"]
              },
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@nrwl/nx/typescript",
        "plugin:@nrwl/nx/angular",
        "plugin:prettier/recommended",
        "plugin:ngrx/recommended"
      ],
      "rules": {}
    },
    {
      "files": ["*.html"],
      "extends": [
        "plugin:@nrwl/nx/angular-template",
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "@angular-eslint/template/i18n": [
          "off",
          {
            "checkId": true,
            "checkText": true,
            "checkAttributes": false
          }
        ],
        "@angular-eslint/template/conditional-complexity": [
          "warn",
          {
            "maxComplexity": 10
          }
        ]
      }
    }
  ]
}
