{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "prettier"],
  "rules": {
    "prettier/prettier": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:web-app",
                "onlyDependOnLibsWithTags": ["type:web-shell", "type:web-util", "scope:web-shared"],
                "bannedExternalImports": ["@nestjs/*"]
              },
              {
                "sourceTag": "type:web-data-access",
                "onlyDependOnLibsWithTags": ["type:web-util", "type:web-shared", "scope:shared"],
                "bannedExternalImports": ["@nestjs/*"]
              },
              {
                "sourceTag": "type:web-ui",
                "onlyDependOnLibsWithTags": ["type:web-ui", "scope:web-shared", "scope:shared"],
                "bannedExternalImports": ["@nestjs/*"]
              },
              {
                "sourceTag": "type:web-feature",
                "onlyDependOnLibsWithTags": ["type:web-ui", "type:web-data-access", "type:web-util", "scope:web-shared", "scope:shared"],
                "bannedExternalImports": ["@nestjs/*"]
              },
              {
                "sourceTag": "type:web-util",
                "onlyDependOnLibsWithTags": ["type:web-util", "scope:web-shared", "scope:shared"],
                "bannedExternalImports": ["@nestjs/*"]
              },
              {
                "sourceTag": "type:web-shell",
                "onlyDependOnLibsWithTags": ["type:web-feature", "type:web-util", "type:web-ui", "scope:web-shared"],
                "bannedExternalImports": ["@nestjs/*"]
              },



              {
                "sourceTag": "type:api-app",
                "onlyDependOnLibsWithTags": ["type:shell"],
                "bannedExternalImports": ["@angular/*"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:data-access", "type:util", "scope:api-shared"],
                "bannedExternalImports": ["@angular/*"]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:data-access", "type:util", "type:config", "scope:api-shared"],
                "bannedExternalImports": ["@angular/*"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util", "type:util", "scope:api-shared"],
                "bannedExternalImports": ["@angular/*"]
              },
              {
                "sourceTag": "type:config",
                "onlyDependOnLibsWithTags": ["type:config", "type:data-access", "scope:api-shared"],
                "bannedExternalImports": ["@angular/*"]
              },
              {
                "sourceTag": "type:shell",
                "onlyDependOnLibsWithTags": ["type:shell", "type:config", "type:feature", "scope:api-shared"],
                "bannedExternalImports": ["@angular/*"]
              },
              {
                "sourceTag": "scope:api-shared",
                "onlyDependOnLibsWithTags": ["scope:api-shared", "type:data-access", "type:util"],
                "bannedExternalImports": ["@angular/*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@nrwl/nx/typescript",
        "plugin:@nrwl/nx/angular",
        "plugin:prettier/recommended",
        "plugin:ngrx/recommended"
      ],
      "rules": {}
    },
    {
      "files": ["*.html"],
      "extends": [
        "plugin:@nrwl/nx/angular-template",
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "@angular-eslint/template/i18n": [
          "off",
          {
            "checkId": true,
            "checkText": true,
            "checkAttributes": false
          }
        ],
        "@angular-eslint/template/conditional-complexity": [
          "warn",
          {
            "maxComplexity": 10
          }
        ]
      }
    }
  ]
}
